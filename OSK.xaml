                    <TextBlock Name="T_OpenCarrot" Grid.Row="1" Grid.Column="9" Text="&lt;" />

                    <Rectangle Name="R_CloseCarrot" Grid.Row="1" Grid.Column="11" />
                    <TextBlock Name="T_CloseCarrot" Grid.Row="1" Grid.Column="11" Text=">"/>

